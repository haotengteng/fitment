<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zuoan.dao.ArticleInfoDao">
    <sql id="baseSql" >
        articleId,articleTitle,articleContent,uploader,articleState,isDelete,modifyTime,createTime
    </sql>
    <insert id="addArticleInfo" parameterType="com.zuoan.dao.ArticleInfoDao">
        INSERT INTO article_info(articleId,articleTitle,articleContent,uploader,articleState,isDelete,modifyTime,createTime)
        VALUES (#{articleId},#{articleTitle},#{articleContent},#{uploader},#{articleState},0,sysdate(),sysdate())
    </insert>
    <update id="updateArticleInfo" parameterType="com.zuoan.dao.ArticleInfoDao">
        UPDATE article_info
        <set>
            <if test="articleTitle != null and articleTitle != ''">
                articleTitle = #{articleTitle},
            </if>
            <if test="articleContent != null and articleContent != ''">
                articleContent = #{articleContent},
            </if>
            <if test="uploader != null and uploader != ''">
                uploader = #{uploader},
            </if>
            <if test="articleState != null and articleState != ''">
                articleState = #{articleState},
            </if>
        </set>
        <where>
            isDelete = 0 AND articleId = #{articleId}
        </where>
    </update>
    <update id="deleteArticleInfo" parameterType="string">
        UPDATE article_info SET isDelete = 1 WHERE articleId = #{articleId}
    </update>
    <select id="selectArticleInfoById" parameterType="string">
        SELECT <include refid="baseSql"/> FROM article_info WHERE articleId = #{articleId}
    </select>
    <select id="selectArticleInfo" parameterType="com.zuoan.dao.ArticleInfoDao">
        SELECT <include refid="baseSql"/>
        FROM article_info
        <where>
            <if test="articleTitle != null and articleTitle!=''">
                articleTitle LIKE concat(%,#{articleTitle},%)
            </if>
            <if test="uploader != null and uploader != ''">
               and uploader = #{uploader}
            </if>
            <if test="articleState != null and articleState != ''">
                and articleState = #{articleState}
            </if>
        </where>
    </select>
</mapper>
